{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts",
    "src/test/**/*",
    "src/scripts/debug-tasks.js"
  ]
}
